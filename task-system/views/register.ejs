<!-- views/register.ejs - Registration page template -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Register - ToDo AI</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  
  <!-- Toastify CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/login.css">
</head>
<body>

  <!-- Main Container -->
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <!-- Register Card -->
        <div class="login-card">
          <!-- Logo -->
          <img src="/images/mitsde-logo.svg" alt="MITSDE Logo" class="login-logo mb-3">
          
          <!-- Title -->
          <h6 class="text-center login-title mb-4">ğŸ“ Create Your ToDo AI Account</h6>
          
          <!-- Registration Form -->
          <form action="/register" method="POST">
            <!-- Name Field -->
            <div class="mb-2">
              <label class="form-label">ğŸ‘¤ Full Name</label>
              <input type="text" name="name" required class="form-control" placeholder="Enter your name">
            </div>
            
            <!-- Email Field -->
            <div class="mb-2">
              <label class="form-label">ğŸ“§ Email</label>
              <input type="email" name="email" required class="form-control" placeholder="Enter your email">
            </div>
            
            <!-- Password Field -->
            <div class="mb-2">
              <label class="form-label">ğŸ”’ Password</label>
              <input type="password" name="password" required minlength="6" class="form-control" placeholder="Create a password (min 6 characters)">
            </div>
            
            <!-- Submit Button -->
            <button type="submit" class="btn btn-brand w-100 mt-3">Register</button>
          </form>
          
          <!-- Login Link -->
          <p class="text-center mt-3">Already have an account? <a href="/login">Login here</a></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Toastify JS -->
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

  <!-- Toastify Alerts -->
  <script>
    // Error messages
    <% if (typeof error !== 'undefined' && error) { %>
      Toastify({
        text: "âŒ <%= error %>",
        duration: 4000,
        gravity: "top",
        position: "center",
        backgroundColor: "#dc3545",
      }).showToast();
    <% } %>
  </script>

</body>
</html>

