<!-- views/multimailpage.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Send Bulk Email : NodeJS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous">
</head>

<body class="bg-light">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg border-0">
          <div class="card-header bg-primary text-white">
            <h4 class="mb-0">ðŸ“§ Send Bulk Email (BCC)</h4>
          </div>
          <div class="card-body">
            <form action="/send-multi-email" method="post">
              <div class="mb-3">
                <label class="form-label fw-semibold">BCC Emails</label>
                <textarea class="form-control" name="bcc" rows="3"
                  placeholder="Enter multiple emails separated by commas, e.g. user1@gmail.com, user2@gmail.com"></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label fw-semibold">Subject</label>
                <input type="text" class="form-control" name="subject" placeholder="Enter subject here" required />
              </div>
              <div class="mb-3">
                <label class="form-label fw-semibold">Message</label>
                <textarea class="form-control" name="text" rows="4" placeholder="Type your message..." required></textarea>
              </div>
              <button type="submit" class="btn btn-success px-4">Send Email</button>
              <a href="/" class="btn btn-outline-secondary ms-2">Back</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
