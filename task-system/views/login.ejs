<!-- views/login.ejs - Login page template -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login - ToDo AI</title>

  <!-- Bootstrap CSS - Styling ke liye -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  
  <!-- Toastify CSS - Notification messages ke liye -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />
  
  <!-- Custom CSS - Apni styling -->
  <link rel="stylesheet" href="/css/login.css">
</head>
<body>

  <!-- Main Container -->
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <!-- Login Card -->
        <div class="login-card text-center">
          
          <!-- Logo Section -->
          <div class="mb-2">
            <img src="/images/mitsde-logo.svg" alt="MITSDE Logo" class="login-logo">
          </div>

          <!-- Title -->
          <h4 class="login-title mb-2">üîê Login to ToDo AI</h4>

          <!-- Login Form -->
          <form action="/login" method="POST" class="text-start">
            <!-- Email Field -->
            <div class="mb-3">
              <label class="form-label">üìß Email</label>
              <input type="email" name="email" required class="form-control" placeholder="Enter your email">
            </div>
            
            <!-- Password Field -->
            <div class="mb-3">
              <label class="form-label">üîí Password</label>
              <input type="password" name="password" required class="form-control" placeholder="Enter your password">
            </div>
            
            <!-- Submit Button -->
            <button type="submit" class="btn btn-brand w-100">Login</button>
          </form>

          <!-- Register Link -->
          <p class="text-center mt-3">Don't have an account? <a href="/register">Register here</a></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS - Interactive components ke liye -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Toastify JS - Notifications show karne ke liye -->
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

  <!-- Toastify Alerts - URL parameters se messages show karte hain -->
  <script>
    // Success message - Registration successful hone pe
    <% if (typeof success !== 'undefined' && success) { %>
      Toastify({
        text: "üéâ Registration Successful! Please login.",
        duration: 4000,
        gravity: "top",
        position: "center",
        backgroundColor: "#28a745",
        stopOnFocus: true,
      }).showToast();
    <% } %>

    // Error message - Login fail hone pe
    <% if (typeof error !== 'undefined' && error) { %>
      Toastify({
        text: "‚ùå <%= error %>",
        duration: 4000,
        gravity: "top",
        position: "center",
        backgroundColor: "#dc3545",
        stopOnFocus: true,
      }).showToast();
    <% } %>
  </script>

</body>
</html>

