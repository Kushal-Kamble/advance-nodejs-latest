<!doctype html>
<html>
<head><%- include('partials/head') %><title>Register</title></head>
<body class="bg-light">
<div class="container mt-5">
  <div class="col-md-5 mx-auto">
    <div class="card p-4 shadow">
      <h3 class="text-center mb-3">Register</h3>
      <form id="registerForm">
        <input id="name" class="form-control mb-2" placeholder="Full Name" required>
        <input id="email" class="form-control mb-2" type="email" placeholder="Email" required>
        <input id="password" class="form-control mb-2" type="password" placeholder="Password" required>
        <select id="role" class="form-select mb-2">
          <option value="user">Employee</option>
          <option value="manager">Manager</option>
        </select>
        <button class="btn btn-primary w-100">Register</button>
      </form>
      <p class="mt-2 text-center"><a href="/login">Already have account?</a></p>
    </div>
  </div>
</div>

<script src="/public/js/register.js"></script>
</body>
</html>
