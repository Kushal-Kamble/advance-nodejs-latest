<!DOCTYPE html>
<html lang="hi">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Employee Dashboard</title>

  <link rel="stylesheet" href="/libs/bootstrap.min.css" />
  <link rel="stylesheet" href="/libs/tabulator.min.css" />
  <style>
    body { font-family: Arial, sans-serif; background:#f7fbff; }
    .topbar { padding:12px 18px; background:#ffffff; border-bottom:1px solid #eef1f7; display:flex; align-items:center; justify-content:space-between; }
    .container-main { max-width:1100px; margin:20px auto; }
  </style>
</head>
<body>

  <div class="topbar">
    <div><strong>Employee Dashboard</strong></div>
    <div>
      <button id="logoutBtn" class="btn btn-outline-secondary btn-sm">Logout</button>
    </div>
  </div>

  <div class="container-main">
    <div class="mb-3">
      <h5>Your Tasks</h5>
      <p class="text-muted">Assigned tasks will appear here. Use Claim → Upload → Complete workflow.</p>
    </div>

    <div id="taskTable"></div>
  </div>

  <!-- Task Modal -->
  <div class="modal fade" id="taskModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalTitle">Task Details</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p id="modalDescription"></p>
          <p><b>Due:</b> <span id="modalDue"></span></p>
          <p><b>Status:</b> <span id="modalStatus"></span></p>

          <div id="claimSection">
            <button id="claimBtn" class="btn btn-warning">Claim Task</button>
          </div>

          <div id="uploadSection" style="display:none; margin-top:12px;">
            <label>Attachments</label>
            <input id="taskFiles" type="file" multiple class="form-control" />
            <button id="uploadBtn" class="btn btn-secondary mt-2">Upload & Mark Completed</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/libs/bootstrap.bundle.min.js"></script>
  <script src="/libs/tabulator.min.js"></script>
  <script src="/libs/moment.min.js"></script>

  <script src="/js/employee/dashboard.js"></script>
  <script>
    // Logout handler
    document.getElementById("logoutBtn").addEventListener("click", () => {
      localStorage.removeItem("token");
      window.location.href = "/login";
    });
  </script>
</body>
</html>
